{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "octatrack-manager",
  "version": "0.1.0",
  "identifier": "com.dferlay.octatrack-manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Octatrack Manager",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main app capabilities",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "dialog:default",
            "opener:default",
            "updater:default",
            "updater:allow-check",
            "updater:allow-download",
            "updater:allow-install"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "",
      "endpoints": [
        "https://github.com/dferlay/octatrack-manager/releases/latest/download/latest.json"
      ]
    }
  }
}
